{% extends "layouts/simple.njk" %}

{% block testimonialContent %}
<div class="testimonial-area sp bg1">
    <div class="container">
        <div class="testimonial-slider">
            {% for testimonial in collections.testimonials %}
            <div class="single-slide">
                <div class="inner">
                    <p>{{ testimonial.data.desc }}</p>
                    <div class="client-info">
                        <div class="client-img">
                            <img src="{{ testimonial.data.img }}" alt="client">
                        </div>
                        <div class="client-data">
                            <h4>{{ testimonial.data.name }}</h4>
                            <span>{{ testimonial.data.position }}</span>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %} 
        </div>
    </div>
</div>
{% endblock %}